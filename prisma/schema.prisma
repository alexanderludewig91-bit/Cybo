// This is your Prisma schema file,
// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "sqlite"
  url      = env("DATABASE_URL")
}

model ScanHistory {
  id          String   @id @default(cuid())
  type        String   // "url", "password", "email"
  input       String
  result      String   // JSON string with scan results
  score       Int      // Security score 0-100
  createdAt   DateTime @default(now())
}

model ChatMessage {
  id        String   @id @default(cuid())
  role      String   // "user" or "assistant"
  content   String
  createdAt DateTime @default(now())
}

model SecurityAlert {
  id          String   @id @default(cuid())
  title       String
  description String
  severity    String   // "low", "medium", "high", "critical"
  isRead      Boolean  @default(false)
  createdAt   DateTime @default(now())
}

model Settings {
  id                String   @id @default(cuid())
  aiProvider        String   @default("openai") // "openai" or "anthropic"
  notifications     Boolean  @default(true)
  autoScan          Boolean  @default(true)
  darkMode          Boolean  @default(true)
  updatedAt         DateTime @updatedAt
}

model WebsiteVisit {
  id              String   @id @default(cuid())
  url             String
  title           String?
  domain          String
  securityScore   Int?
  cookiesCount    Int      @default(0)
  trackersCount   Int      @default(0)
  thirdPartiesCount Int    @default(0)
  requestsCount   Int      @default(0)
  permissions     String?  // JSON string
  trackers        String?  // JSON string
  cookies         String?  // JSON string
  aiAnalysis      String?  // JSON string mit KI-Bewertung
  visitedAt       DateTime @default(now())
  lastSeenAt      DateTime @default(now())
}

model LiveActivity {
  id              String   @id @default(cuid())
  type            String   // "tracker_blocked", "permission_requested", etc.
  websiteUrl      String
  description     String
  severity        String   // "low", "medium", "high"
  data            String?  // JSON with additional data
  createdAt       DateTime @default(now())
}

